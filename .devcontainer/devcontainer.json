{
    "name": "RPGNexus - Frontend",
    // Aponta para o docker-compose.yml na raiz do projeto
    "dockerComposeFile": [
        "../../docker-compose.yml"
    ],
    // Especifica que este Dev Container deve usar o serviço 'frontend'
    "service": "frontend",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.formatOnSave": true
            },
            "extensions": [
                "angular.ng-template",
                "bradlc.vscode-tailwindcss",
                "esbenp.prettier-vscode"
            ]
        }
    },
    // Comando para rodar após o contêiner iniciar
    "postStartCommand": "npm start",
    "remoteUser": "vscode"
}